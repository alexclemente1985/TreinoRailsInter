<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %><!-- se usuário for administrador e não for o próprio usuário a ser deletado-->
    <%= link_to "delete", user, method: :delete,
                                data: { confirm: "You sure?" } %>  
  <% end %>

</li>
